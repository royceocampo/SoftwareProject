package classes;

import java.sql.Connection;
import java.sql.PreparedStatement;

import dbconnection.DBConnection;
import managers.Product;

public class ProductManager {
	public static void addProduct(Product newProduct) throws Exception{	
				
//		System.out.println("Product Name: " +strProdName);
//		System.out.println("Category: " +strCategory);
//		System.out.println("Subtype: " +strSubtype);
//		System.out.println("Brand: " +strBrand);
//		System.out.println("Packaging: " +strPackaging);
//		System.out.println("Price: " +nPrice);
		PreparedStatement pstmt = null;
		Connection conn = (Connection)DBConnection.getConnection();
		pstmt = conn.prepareStatement("INSERT INTO products_table(productName, category, subtype, brand, priceperkilo)"
			     + "values (?, ?, ?, ?, ?, ?)");
		
		pstmt.setString(1, newProduct.getProductName());
		pstmt.setString(2, newProduct.getProdCategory());
		pstmt.setString(3, newProduct.getProdSubtype());
		pstmt.setString(4, newProduct.getProdBrand());
		pstmt.setString(5, newProduct.getProdPackaging());
		pstmt.setInt(6, newProduct.getProdPrice());
		
		pstmt.executeQuery();
	}
}
